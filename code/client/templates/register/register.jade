template(name="register")
  .login.login-register
    form(method="post")
      .ui.form.segment
        .field
          label Username
          .login-user
            i.user.icon
            input(type="text", placeholder="Username", name="username")
        .field
          label Password
          .login-password
            i.lock.icon
            input(type="password", placeholder="Password", name="password")
        .field
          label &#26165;&#31216;
          .login-name
            i.users.icon
            input(type="text", placeholder="Name", name="nickname")
        .field
          label &#24615;&#21035;
          .login-sexual
            i.male.icon
            select(name="sex")
              option(value="male") &#30007;
              option(value="female") &#22899;
        .field
          label &#25163;&#26426;&#21495;&#30721;
          .login-tel
            i.mobile.icon
            input(type="text", placeholder="Tel", name="tel")
        .field
          label QQ
          .login-qq
            i.chat.icon
            input(type="text", placeholder="QQ", name="qq")
        .field
          label &#37038;&#31665;
          .login-mail
            i.mail.icon
            input(type="text", placeholder="Mail", name="mail")
        .field.show-avatar-field
          .show-avatar
            img(src="", alt="cover", id="cover")
          .ui.input
            input(type="file", name="avatar" class="avatar-input")
        .ui.error.message
        .ui.buttons.login-button
          button.ui.positive.button(type="submit") &#30830;&#23450;
   


